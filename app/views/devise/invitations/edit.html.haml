%h2 Complete Your Registration
%p= link_to "Connect to LinkedIn", '#'
%p
  %a#noThanks
    Set a password instead.

#setPassword.hide
  = simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: {method: :put}, role: 'form') do |f|
    = f.hidden_field :invitation_token
    = f.input :password
    = f.input :password_confirmation
    = f.button :submit, t("devise.invitations.edit.submit_button"), class: 'btn btn-primary'

:javascript
  $(function() {
    $('#noThanks').on('click', function(e){
      $('#setPassword').show();
      $('#noThanks').hide();
    })
  })
